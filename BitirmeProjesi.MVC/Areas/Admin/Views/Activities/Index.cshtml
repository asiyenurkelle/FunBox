@model BitirmeProjesi.Entities.Dtos.BookSerieMovieDto
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="container">

    <div class="row" id="HomePage">

        <div class="col-lg-3 bg-transparent">
            @* RESİM VS EKLEME YAPILABİLİR*@
        </div>

        <div class="col-lg-9 p-5">

            <div class="row">

                <div class="col-lg-4 col-md-6 mb-4">

                    <div class="card h-100">

                        <div class="card-body ">
                            <h5 class="card-title text-center text-info">Okunacak Kitaplar Listesi</h5>

                        </div>
                        @foreach (var book in Model.Books)
                        {

                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">@book.Title</li>
                                <li class=" btn btn-group-toggle">
                                    <a asp-area="Admin" asp-controller="Book" asp-action="Details" class="btn btn-sm text-info" data-toggle="modal" data-target="#exampleModal" data-id="@book.Id">Listeden Çıkar</a>
                                    <a asp-area="Admin" asp-controller="Book" asp-action="Details" asp-route-id="@book.Id" class="btn btn-sm text-info">Detaylar</a>
                                </li>

                            </ul>

                        }

                    </div>
                </div>

                <div class="col-lg-4 col-md-6 mb-4">

                    <div class="card h-100">

                        <div class="card-body ">
                            <h5 class="card-title text-center text-info">İzlenilecek Diziler Listesi</h5>

                        </div>
                        @foreach (var serie in Model.Series)
                        {

                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">@serie.Title</li>
                                <li class=" btn btn-group-toggle">
                                    <a asp-area="Admin" asp-controller="Serie" asp-action="Details" class="btn btn-sm text-info" data-toggle="modal" data-target="#exampleModal" data-id="@serie.Id">Listeden Çıkar</a>
                                    <a asp-area="Admin" asp-controller="Serie" asp-action="Details" asp-route-id="@serie.Id" class="btn btn-sm text-info">Detaylar</a>
                                </li>

                            </ul>
                        }

                    </div>
                </div>


                <div class="col-lg-4 col-md-6 mb-4">

                    <div class="card h-100">

                        <div class="card-body ">
                            <h5 class="card-title text-center text-info">İzlenilecek Filmler Listesi</h5>

                        </div>
                        @foreach (var movie in Model.Movies)
                        {

                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">@movie.Title</li>
                                <li class=" btn btn-group-toggle">
                                    <a asp-area="Admin" asp-controller="Movie" asp-action="Details" class="btn btn-sm text-info" data-toggle="modal" data-target="#exampleModal" data-id="@movie.Id">Listeden Çıkar</a>
                                    <a asp-area="Admin" asp-controller="Movie" asp-action="Details" asp-route-id="@movie.Id" class="btn btn-sm text-info">Detaylar</a>
                                </li>

                            </ul>
                        }

                    </div>
                </div>



                <!-- Modal -->
                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Uyarı</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body text-center lead">
                                Listeden çıkarmak istediğinize emin misiniz?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Vazgeç</button>
                                <button id="btnSave" type="button" class="btn btn-info">Listeden Çıkar</button>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

</div>
@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#exampleModal").on("show.bs.modal", function (event) {
                let tetikleyenElement = $(event.relatedTarget);
                let data = tetikleyenElement.data("id");
               
                $("#btnSave").click(function () {
                    $.ajax({
                        type: "GET",
                        contentType: "application/json; charset=utf-8",
                        url: "./Activities/RemoveActivity",
                        data: { Id: data },
                        success: function () {
                            window.location.reload();
                        },
                        error: function (error) {
                            alert(error.responseText);
                        }
                    })
                })
            });
        });
    </script>

}