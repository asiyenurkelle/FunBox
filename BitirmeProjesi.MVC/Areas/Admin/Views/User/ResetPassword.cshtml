@model BitirmeProjesi.Entities.Dtos.UserPasswordResetDto
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutLoginAndSignUp.cshtml";
    ViewBag.Title = "Şifremi Unuttum";
}

@if (ViewBag.State == null)
{
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5">
                <div class="card  mt-5 bg-dark">
                    <div class="card-header text-info"><h3 class="text-center  my-4"> <span class="fas fa-house-user"></span>Şifremi Unuttum</h3></div>
                    <div class="card-body">
                        <form asp-area="Admin" asp-controller="User" asp-action="ResetPassword">
                            <div asp-validation-summary="All" class="text-danger">
                            </div>
                            <div class="form-group">
                                <label class="small text-white" asp-for="Email">Email</label>
                                <input class="form-control py-4 " asp-for="Email" type="email" placeholder="Lütfen e-posta adresinizi giriniz." />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form">
                                <input type="submit" class="btn btn-info btn-block" value="Yeni Şifre Talebi Gönder" />
                                @*<button type="submit" class="btn btn-info btn-block"><span class="fas fa-user-edit"></span>Yeni Şifre Talebi Gönder </button>*@
                            </div>
                        </form>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
}
else
{
    if (ViewBag.State)
    {
        @:<div class="alert-success">Şifre talebi için e-posta adresinize bilgilerindirici mail gönderilmiştir.</div>
    }
    else
    {
        @:<div class="alert-success">Böyle bir e-posta bulunmamaktadır.</div>
    }
}