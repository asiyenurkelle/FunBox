@model BitirmeProjesi.Entities.Dtos.UserSignUpDto
@{ 
    Layout = "~/Areas/Admin/Views/Shared/_LayoutLoginAndSignUp.cshtml";
    ViewBag.Title = "Kayıt Ol";
    }

<link href="~/css/Comments.css" rel="stylesheet" />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card   mt-5 bg-dark">
                <div class="card-header text-info"><h3 class="text-center  my-4"> <span class="fas fa-house-user"></span> Kaydol</h3></div>
                <div class="card-body">
                    <form asp-controller="User" asp-action="SignUp" method="post">
                        <div asp-validation-summary="All" class="text-danger">
                        </div>
                        <div class="form-group">
                            <label class="small text-white btn-circle" asp-for="UserName">Kullanıcı Adı</label>
                            <input class="form-control py-4 btn-circle" asp-for="UserName" placeholder="Lütfen kullanıcı adınızı giriniz." />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="small text-white btn-circle" asp-for="Email">Email</label>
                            <input class="form-control py-4 btn-circle" asp-for="Email" type="email" placeholder="Lütfen e-posta adresinizi giriniz." />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="small text-white btn-circle" asp-for="PhoneNumber">Telefon Numarası</label>
                            <input class="form-control py-4 btn-circle" asp-for="PhoneNumber"  placeholder="Lütfen telefon numaranızı giriniz." />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="small text-white btn-circle" asp-for="Password">Şifre</label>
                            <input class="form-control py-4 btn-circle" asp-for="Password" type="password" placeholder="Lütfen şifrenizi giriniz." />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="small text-white btn-circle" asp-for="RepeatPassword">Şifre tekrarı</label>
                            <input class="form-control py-4 btn-circle" asp-for="RepeatPassword" type="password" placeholder="Lütfen şifrenizi tekrar giriniz." />
                            <span asp-validation-for="RepeatPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group text-center">
                            <a class="btn btn-secondary text-white btn-circle text-uppercase" asp-controller="User" asp-action="Login"> <span class="fas fa-user-lock "></span> Vazgeç</a>
                            <button class="btn btn-info btn-circle text-uppercase" type="submit"> <span class="fas fa-sign-in-alt"></span> Kaydol</button>
                        </div>
                    </form>
                </div>
                
            </div>
        </div>
    </div>
</div>
