@model BitirmeProjesi.Entities.Dtos.UserLoginDto

@{ Layout = null;}

<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<link href="~/css/login.css" rel="stylesheet" />

<div class="login-wrap">
    <div class="login-html bg-dark">
        <input name="tab" class="sign-in" checked><label for="tab-1" class="tab">Giris Yap</label>
        

        <div class="login-form">
            <form asp-area="Admin" asp-controller="User" asp-action="Login" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="group">
                    <label class="label" asp-for="Email">Email</label>
                    <input class="input" asp-for="Email" type="email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="group">
                    <label class="label" asp-for="Password">Sifre</label>
                    <input class="input" asp-for="Password" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="group">
                    <button class="button" type="submit"> <span class="fas fa-sign-in-alt"></span> Giris Yap</button>
                </div>
                <div class="hr"></div>
                <div class="foot-lnk">
                    <a asp-area="Admin" asp-controller="User" asp-action="ResetPassword">Şifremi Unuttum</a>
                    /
                    <a asp-area="Admin" asp-controller="User" asp-action="SignUp"> Kayıt Ol </a>

                </div>

            </form>
        </div>
    </div>
</div>
