@model BitirmeProjesi.Entities.Dtos.UserUpdatePasswordDto
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutLoginAndSignUp.cshtml";
}

@if (ViewBag.State == null)
{
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5">
                <div class="card  mt-5 bg-dark">
                    <div class="card-header text-info"><h3 class="text-center  my-4"> <span class="fas fa-house-user"></span>Şifremi Güncelle</h3></div>
                    <div class="card-body">
                        <form asp-area="Admin" asp-controller="User" asp-action="UpdatePassword">
                            <div asp-validation-summary="All" class="text-danger">
                            </div>
                            <div class="form-group">
                                <label class="small text-white" asp-for="Password">Şifre</label>
                                <input class="form-control py-4 " asp-for="Password" type="password" placeholder="Lütfen yeni şifrenizi giriniz." />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form">
                                <input type="submit" id="btnSend" class="btn btn-info btn-block" value="Şifreyi Güncelle" />
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
}
else
{
    if (ViewBag.State)
    {
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-5">
                    <div class="card  mt-5 bg-dark">
                        <div class="card-header text-info"><h3 class="text-center  my-4"> <span class="fas fa-house-user"></span>Şifremi Güncelle</h3></div>
                        <div class="card-body">
                            <form asp-area="Admin" asp-controller="User" asp-action="UpdatePassword">
                                <div asp-validation-summary="All" class="text-danger">
                                </div>
                                <div class="form-group">
                                    <div class=" card  mt-5 text-dark small alert-success">Şifre başarıyla güncellenmiştir.</div>
                                    <label class="small text-white" asp-for="Password">Password</label>
                                    <input class="form-control py-4 " asp-for="Password" type="password" placeholder="Lütfen yeni şifrenizi giriniz." />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form">
                                    <input type="submit" id="btnSend" class="btn btn-info btn-block" value="Tekrar Şifre Talebi Gönder" />
                                    <a class="btn btn-info btn-block" asp-area="Admin" asp-controller="User" asp-action="Login">Giriş Yap</a>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    }
    else
    {
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-5">
                    <div class="card  mt-5 bg-dark">
                        <div class="card-header text-info"><h3 class="text-center  my-4"> <span class="fas fa-house-user"></span>Şifremi Güncelle</h3></div>
                        <div class="card-body">
                            <form asp-area="Admin" asp-controller="User" asp-action="UpdatePassword">
                                <div asp-validation-summary="All" class="text-danger">
                                </div>
                                <div class="form-group">
                                    <div class=" card mt-5  small alert-danger text-dark"> Şifreyi güncellerken beklenmeyen hatayla karşılaşıldı.</div>
                                    <label class="small text-white" asp-for="Password">Yeni Şifre</label>
                                    <input class="form-control py-4 " asp-for="Password" type="password" placeholder="Lütfen yeni şifrenizi giriniz." />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form">

                                    <a class="btn btn-info btn-block" asp-area="" asp-controller="Home" asp-action="Index">Anasayfaya Dön</a>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    }
}

