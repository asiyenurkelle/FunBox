@model BitirmeProjesi.Entities.Dtos.UserPasswordChangeDto
@{
    Layout = "~/Areas/Admin/Views/Shared/_UserLoginLayout.cshtml";
}


<div class="row">
    <div class="col-lg-6 offset-lg-3">
        <div class="card mt-3">
            <div class="card-header">
                <h4 class="text-center text-info"><span class="fas fa-key"> </span> Şifre Değiştir </h4>
                </div>
            <div class="card-body">
                <form asp-controller="User" asp-action="PasswordChange" method="post">
                    <div asp-validation-summary="All" class="text-danger" id="validation-summary"></div>
                   
                    <div class=" form-group">
                        <label asp-for="CurrentPassword"></label>
                        <input type="password" class="form-control" asp-for="CurrentPassword" placeholder="Lütfen, şuanki şifrenizi giriniz." />
                        <span class="text-danger" asp-validation-for="CurrentPassword"></span>
                    </div>
                    <div class=" form-group">
                        <label asp-for="NewPassword"></label>
                        <input type="password" class="form-control" asp-for="NewPassword" placeholder="Lütfen, yeni şifrenizi giriniz." />
                        <span class="text-danger" asp-validation-for="NewPassword"></span>
                    </div>
                    <div class=" form-group">
                        <label asp-for="RepeatPassword"></label>
                        <input type="password" class="form-control" asp-for="RepeatPassword" placeholder="Lütfen, tekrardan yeni şifrenizi giriniz." />
                        <span class="text-danger" asp-validation-for="RepeatPassword"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-info btn-block" id="btnSave"><span class="fas fa-save"></span> Kaydet </button>
                    </div>
                </form>
            </div>
            </div>
    </div>
</div>

