@model BitirmeProjesi.Entities.Dtos.UserPasswordChangeDto
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card  mt-5 ">
                <div class="card-header text-info"><h3 class="text-center  my-4"> <span class="fas fa-key"></span>Şifremi Değiştir</h3></div>
                <div class="card-body">
                    <form asp-controller="User" asp-action="PasswordChange" method="post">
                        <div asp-validation-summary="All" class="text-danger" id="validation-summary">
                        </div>
                        <div class="form-group">
                            <label class="small text-white" asp-for="CurrentPassword"></label>
                            <input class="form-control py-4 " asp-for="CurrentPassword" type="password" placeholder="Lütfen, şuanki şifrenizi giriniz." />
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="small  text-white" asp-for="NewPassword"></label>
                            <input class="form-control py-4 " asp-for="NewPassword" type="password" placeholder="Lütfen yeni şifrenizi giriniz." />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="small  text-white" asp-for="RepeatPassword"></label>
                            <input class="form-control py-4 " asp-for="RepeatPassword" type="password" placeholder="Lütfen tekrardan yeni şifrenizi giriniz." />
                            <span asp-validation-for="RepeatPassword" class="text-danger"></span>
                        </div>


                        <div class="form-group">
                            <button type="submit" class="btn btn-info btn-block" id="btnSave"><span class="fas fa-save"></span> Kaydet </button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>
