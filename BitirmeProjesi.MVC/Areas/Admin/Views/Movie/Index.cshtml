@model BitirmeProjesi.Entities.Dtos.MovieListDto
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@if (Model.ResultStatus == BitirmeProjesi.Shared.Utilities.Results.Complex_Types.ResultStatus.Success)
{
    <div id="placeHolderMovies" aria-hidden="true"></div>
    <div class="container">

        <div class="row">

            <div class="col-lg-3">

                <h4 class="my-4 text-info h-auto w-auto">E-Hobilerim </h4>
                <div class="list-group ">
                    @foreach (var categories in Model.Categories)
                    {
                        <a asp-area="Admin" asp-controller="Movie" asp-action="Index" asp-route-id="@categories.Id" class="list-group-item text-info @*@(active==" film"?"active":""*@)">@categories.Name</a>

                    }


                </div>
            </div>
            <!-- /.col-lg-3 -->

            <div class="col-lg-9 p-3 pt-5">

                <div class="row">

                    @foreach (var movie in Model.Movies)
                    {
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card h-100">
                                <img class="card-img-top" src="~/img/@movie.ThumbNail" alt="">
                                <div class="card-body">
                                    <h4 class="card-title">
                                        <a asp-area="Admin" asp-controller="Movie" asp-action="Details" asp-route-id="@movie.Id" class="text-info">@movie.Title</a>
                                    </h4>

                                    <p class="card-text">
                                        @movie.Subject
                                    </p>
                                </div>
                                <div class="card-footer">
                                    <a type="button" class="btn btn-info" id="DetailsMovies" asp-area="Admin" asp-controller="Movie" asp-action="Details" asp-route-id="@movie.Id">Detaylar</a>
                                    <a type="button" class="btn btn-info" id="AddCommentMovies" asp-area="Admin" asp-controller="Movie" asp-action="AddComment" asp-route-id="@movie.Id">Yorum Ekle</a>
                                </div>

                            </div>
                        </div>
                    }


                </div>
                <!-- /.row -->

            </div>
            <!-- /.col-lg-9 -->

        </div>
        <!-- /.row -->


    </div>
}
