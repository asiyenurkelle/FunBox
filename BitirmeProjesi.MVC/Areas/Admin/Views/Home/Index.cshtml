@model BitirmeProjesi.Entities.Dtos.BookSerieMovieDto
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@if (Model.ResultStatus == BitirmeProjesi.Shared.Utilities.Results.Complex_Types.ResultStatus.Success)
{
    <div  id="modalPlaceHolder" aria-hidden="true"></div>
    <div class="container">

        <div class="row" id="HomePage">

            @await Html.PartialAsync("_LayoutListGroupPartial")
            <!-- /.col-lg-3 -->

            <div class="col-lg-9">
                
                <div class="row">
                

                    @foreach (var book in Model.Books)
                    {
                        <div class="col-lg-4 col-md-6 mb-4"> 

                            <div class="card h-100">
                                <img class="card-img-top" src="~/img/@book.ThumbNail" alt="">
                                <div class="card-body ">
                                    <h4 class="card-title">
                                        <a asp-area="Admin" asp-controller="Book" asp-action="Index" class="text-info">@book.Title</a>
                                    </h4>

                                    <p class="card-text">
                                        @book.Subject
                                    </p>
                                </div>
                                
                            </div>
                        </div>
                    }

                    @foreach (var serie in Model.Series)
                    {
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card h-100">
                                <img class="card-img-top" src="~/img/@serie.ThumbNail" alt="">
                                <div class="card-body">
                                    <h4 class="card-title">
                                        <a asp-area="Admin" asp-controller="Serie" asp-action="Index" class="text-info">@serie.Title</a>
                                    </h4>

                                    <p class="card-text">
                                        @serie.Subject
                                    </p>
                                </div>
                                
                            </div>
                        </div>
                    }

                    @foreach (var movie in Model.Movies)
                    {
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card h-100">
                                <img class="card-img-top" src="~/img/@movie.ThumbNail" alt="">
                                <div class="card-body">
                                    <h4 class="card-title ">

                                        <a asp-area="Admin" asp-controller="Movie" asp-action="Index" class="text-info">@movie.Title</a>
                                    </h4>

                                    <p class="card-text">
                                        @movie.Subject
                                    </p>
                                </div>
                                
                            </div>
                        </div>
                    }


                </div>
                <!-- /.row -->

            </div>
            <!-- /.col-lg-9 -->

        </div>
        <!-- /.row -->


    </div>
}
@section Scripts {
    <script></script>
}

