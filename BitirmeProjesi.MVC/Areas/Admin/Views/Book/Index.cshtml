@model BitirmeProjesi.Entities.Dtos.BookListDto
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@if (Model.ResultStatus == BitirmeProjesi.Shared.Utilities.Results.Complex_Types.ResultStatus.Success)
{
    <div class="container">

        <div class="row">

            @await Html.PartialAsync("_LayoutListGroupPartial")
            <!-- /.col-lg-3 -->

            <div class="col-lg-9 p-3">

                <div class="row">

                    @foreach (var book in Model.Books)
                    {
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card h-100">
                                <img class="card-img-top text-center" src="~/img/@book.ThumbNail" alt="">
                                <div class="card-body">
                                    <h4 class="card-title">
                                        <a asp-area="Admin" asp-controller="Book" asp-action="Details" asp-route-id="@book.Id" class="text-info text-center">@book.Title</a>
                                    </h4>

                                    <p class="card-text">
                                        @book.Subject
                                    </p>
                                </div>
                                <div class="card-footer">
                                    <a type="button" class="btn btn-info" id="DetailsBooks" asp-area="Admin" asp-controller="Book" asp-action="Details" asp-route-id="@book.Id">Detaylar</a>
                                    <a type="button" class="btn btn-info" id="AddCommentBooks" asp-area="Admin" asp-controller="Book" asp-action="AddComment" asp-route-id="@book.Id">Yorum Ekle</a>
                                </div>

                            </div>
                        </div>
                    }


                </div>
                <!-- /.row -->

            </div>
            <!-- /.col-lg-9 -->

        </div>
        <!-- /.row -->


    </div>
}
