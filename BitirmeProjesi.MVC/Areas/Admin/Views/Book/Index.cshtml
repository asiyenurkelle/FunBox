@model BitirmeProjesi.Entities.Dtos.BookListDto
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@if (Model.ResultStatus == BitirmeProjesi.Shared.Utilities.Results.Complex_Types.ResultStatus.Success)
{
    <div class="container">

        <div class="row">

            @await Html.PartialAsync("_LayoutListGroupPartial")
            <!-- /.col-lg-3 -->

            <div class="col-lg-9">

                <div class="row">

                    @foreach (var book in Model.Books)
                    {
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card h-100">
                                <img class="card-img-top" src="~/img/@book.ThumbNail" alt="">
                                <div class="card-body">
                                    <h4 class="card-title">
                                        <a asp-area="Admin" asp-controller="Home" asp-action="Index">@book.Title</a>
                                    </h4>

                                    <p class="card-text">
                                        @book.Subject
                                    </p>
                                </div>
                                <div class="card-footer">
                                    <button type="button" class="btn btn-primary" id="DetailsBooks">Details</button>
                                    <button type="button" class="btn btn-primary" id="AddListBooks">Add List</button>
                                </div>
                                <div class="card-footer" id="placeHolderBooks">

                                </div>
                            </div>
                        </div>
                    }


                </div>
                <!-- /.row -->

            </div>
            <!-- /.col-lg-9 -->

        </div>
        <!-- /.row -->


    </div>
}
@section Scripts{
    <script>
        $(function () {
            const url = '@Url.Action("Add","Comment")';
            const placeHolderBooks = $('#placeHolderBooks');
            $('#DetailsBooks').click(function () {
                $.get(url).done(function (data) {
                    placeHolderBooks.html(data);
                    placeHolderBooks.find(".modal").modal('show');
                })
            });
        })
    </script>
 }